<label for={"input" + label} class="radioLabel Typo-form-label">
  <input type="radio" name={radioGroup} id={"input" + label} class="radioInput" />
  <div class="radioButtonCustom"></div>
  {label}
</label>

<style>
  .radioLabel {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
  }
  .radioInput {
    display: none;
  }

  /* selve radio knappen */
  .radioButtonCustom {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    border: 2px solid var(--Color-Stroke-Primary);
    box-sizing: border-box;
    padding: 3px;
    margin-right: 8px;
  }
  .radioButtonCustom::after {
    content: "";
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 50%;
    background-color: var(--Color-Fill-step);
    transform: scale(0);
    transition: transform 0.15s;
  }
  .radioInput:checked + .radioButtonCustom {
    border-color: var(--Color-Stroke-Blue);
  }
  .radioInput:checked + .radioButtonCustom::after {
    transform: scale(1);
  }
</style>
