<style>
  footer {
    display: flex;
    width: 1440px;
    padding: 48px;
    flex-direction: column;
    align-items: flex-start;
    gap: 48px;
    background-color: var(--Color-Background-Seconday);
  }
  #footer_content {
    display: flex;
    justify-content: space-between;
    width: 100%;
    flex-wrap: wrap;
  }
  #someLinks_container {
    display: flex;
    gap: 32px;
  }

  .FooterColumn,
  #NewsletterForm {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    max-width: 380px;
  }

  .links_container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }
  .footerText {
    color: var(--Color-Text-Body-Transparent);
  }

  .footerLink:hover {
    text-decoration: underline;
  }
  #formButton {
    background-color: var(--Color-Fill-Button-Teritary);
    border: none;
    box-shadow: 0px 1px 4px 0px var(--Color-Effect-Dropshadow-Button-Default);
    color: var(--Color-Text-White);
  }
</style>
