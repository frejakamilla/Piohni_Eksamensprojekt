<style>
  section {
    width: 100vw;
    overflow: scroll;
    border-top: 1px solid var(--Color-Stroke-Primary, #d5d0c8);
    background-color: var(--Color-Background-Secondary);
  }
  .testimonials {
    display: flex;
    gap: 40px;
    width: fit-content;
    padding: 20px;
  }
  @media (min-width: 700px) {
    .testimonials {
      padding: 40px;
    }
  }
</style>
