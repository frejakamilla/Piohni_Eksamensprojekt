---
import Image from "astro/components/Image.astro";
import lillePetra from "../assets/images/partners/lille-petra.jpg";
import audo from "../assets/images/partners/audo.jpg";
import bagatelle from "../assets/images/partners/bagatelle.jpg";
import batch from "../assets/images/partners/batch.jpg";
import bistroVerde from "../assets/images/partners/bistro-verde.jpg";
import elwisNewton from "../assets/images/partners/elwis-newton.jpg";
import format from "../assets/images/partners/format.jpg";
import planetNusa from "../assets/images/partners/planet-nusa.jpg";
import rosenhuset from "../assets/images/partners/rosenhuset.jpg";
import soly from "../assets/images/partners/soly.jpg";
