---
import Image from "astro/components/Image.astro";
import recipeImage from "../../assets/images/recipes/matcha-tea.png";
import recipeIllu from "../../assets/images/recipes/illu2.svg";

import "../../styles/recipes.css";
import BaseLayout from "../../layouts/BaseLayout.astro";
import RecipeIngredients from "../../components/molecules/RecipeIngredients.astro";
import RecipeDirections from "../../components/molecules/RecipeDirections.astro";
import MatchaKitSection from "../../components/sections/MatchaKitSection.astro";
---

<BaseLayout titleTag="Piohní recipe: Matcha Tea" pagename="matcha-tea" metaDescription="Matcha tea, a self-care ritual that is over 800-years old, famous from the tea ceremonies in Japan. Today a sweet treat everyone can enjoy.">
  <main>
    <section id="recipe_section">
      <div id="ingredient_section">
        <RecipeIngredients recipeName="Matcha Tea" recipeType="Classic Recipe" ingredientNote="">
          <li slot="ingredient1">1.5 tsp Piohní Ceremonial Grade Matcha</li>
          <li slot="ingredient2">200 ml Water</li>
          <li slot="ingredient3">Sweetener (optional)</li>
          <li slot="equipment1">Piohní matcha powder</li>
          <li slot="equipment2">Matcha whisk</li>
          <li slot="equipment3">Chawan bowl</li>
          <li slot="equipment4">kettle or pot</li>
        </RecipeIngredients>
        <div class="ImageContainer">
          <Image src={recipeImage} alt="" class="RecipeImage image" />
        </div>
      </div>
      <div id="direction_section">
        <div class="IlluContainer">
          <Image src={recipeIllu} alt="" class="RecipeImage" />
        </div>
        <RecipeDirections
          step1="Add Piohní Ceremonial Grade matcha powder into 50 ml water (70℃ or 167ºF). The temperature of your water when preparing matcha has a great influence on the taste. We recommend hot but not boiling water, since the latter scorches the delicate powder, making it taste bitter."
          step2="Next, infuse the matcha into the water using our chasen, bamboo matcha whisk in back-and-forth motions, create a 'W' shape with your wrist, and mix the matcha until foamy and smooth."
          step3="Optional — add 1 to 2 tsp of sugar or sweetener into the matcha. (This step it not needed with the high quality of our ceremonial grade matcha, but some may like it extra sweet)."
          step4="Pour 150 ml of hot water into the matcha and stir."
          step5="Your traditional matcha tea is now ready"
        />
      </div>
    </section>
    <MatchaKitSection />
  </main>
</BaseLayout>
